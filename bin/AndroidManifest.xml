<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gw.library"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <!-- For using network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- For using notification -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gw.library.ui.LauncherActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.library.ui.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.library.ui.HistoryActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.library.ui.RecommendActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.library.ui.RemindActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.library.ui.HistoryWebViewActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.library.ui.SettingActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gw.library.ui.AlarmDetialActivity"
            android:label="@string/app_name"
            android:theme="@style/noTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- activity Receiver -->

        <receiver
            android:name="com.gw.library.ui.HistoryActivity$HistoryReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.gw.library.service.action.history" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.gw.library.ui.RemindActivity$RemindReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.gw.library.service.action.remind" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.gw.library.service.AlarmReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.gw.library.service.action.alarmreceiver" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- service -->
        <service
            android:name="com.gw.library.service.RemoteService"
            android:enabled="true"
            android:exported="false"
            android:label="@string/remote_serivice" >
            <intent-filter>
                <action android:name="com.gw.library.service.action.remote" />

                <category android:name="android.intent.category.default" />
            </intent-filter>
        </service>
        <service
            android:name="com.gw.library.service.AlarmNotifyService"
            android:enabled="true"
            android:exported="false"
            android:label="@string/remote_serivice" >
            <intent-filter>
                <action android:name="com.gw.library.service.action.alarm" />

                <category android:name="android.intent.category.default" />
            </intent-filter>
        </service>
    </application>

</manifest>