<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
	<RelativeLayout 
	    android:id="@+id/r_item_main"
	    style="@style/h_item" 
	    >
	
	    <LinearLayout 
	        android:layout_height="52dp"
			android:layout_width="62dp"
			android:layout_alignParentLeft="true"	
			android:id="@+id/r_number"
	        >
	       <TextView 
	           android:id="@+id/r_remain_day"
	           android:text="@string/remain"
	           android:textStyle="bold" 
	           android:textColor="@color/red"
	           android:layout_height="fill_parent"
	           android:layout_width="fill_parent"
	           android:textSize="30sp"
	           android:gravity="center"
	           /> 
	        
	    </LinearLayout>
	    
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_toRightOf="@id/r_number"
			android:layout_width="fill_parent"
			android:padding="10dp"
			android:layout_height="wrap_content"
		 >
			<TextView 
			    android:id="@+id/r_title"
				android:text="@string/remind"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			     />
			
			<TextView 
			     android:id="@+id/r_author"
			     android:text="@string/remind"
			     android:textColor="#000000"
			     android:layout_width="fill_parent"
			     android:layout_height="wrap_content"
			     />
		</LinearLayout>
	  
	</RelativeLayout>
	
	
	<LinearLayout
	    android:id="@+id/r_item_bottom"
	    android:layout_width="fill_parent"
	    android:layout_height="25dp"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:background="@color/grey_bg"
	    android:visibility="visible"
	    >
		
			<TextView
			    android:id="@+id/r_close"
			    android:layout_width="166dp"
			    android:layout_height="30dp"
			    android:background="@drawable/remind_renew_hover"
			    android:gravity="center"
			    android:text="收起"
			    android:textColor="#888888"
			    android:textSize="12sp"
			     />

			<TextView 
			    android:id="@+id/r_string"
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
				android:textColor="#888888"
				android:background="@drawable/string"
				android:layout_marginLeft="-10dp"
				android:layout_marginRight="0dp"
			     />

			<TextView
			    android:id="@+id/renew"
			    android:layout_width="166dp"
			    android:layout_height="30dp"
			    android:background="@drawable/remind_renew_hover"
			    android:gravity="center"
			    android:text="续借"
			    android:textColor="#888888"
			    android:textSize="12sp" />

	</LinearLayout>
	
	
	
	
	
	
	
	
	
</LinearLayout>