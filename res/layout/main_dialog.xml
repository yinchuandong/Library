<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="80dp"
  android:orientation="vertical" 
  android:layout_margin="0dp"
  android:padding="0dp"
  android:background="@color/gray" 
  >
  
  <ImageView 
      android:id="@+id/main_dialog_close" 
      android:background="@drawable/close_t" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      />
  <RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_below="@+id/main_dialog_close"
	android:orientation="horizontal"
	android:gravity="center_horizontal"
       >
        
      <ProgressBar
        android:id="@+id/main_dialog_loading"
        android:layout_width="40dp"
        android:layout_height="40dp" 
        android:visibility="visible"
        android:gravity="center" 
        />
    <TextView 
        android:id="@+id/main_dialog_text" 
        android:layout_toRightOf="@+id/main_dialog_loading"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#ffffff" 
        android:text="test"
        android:textSize="18sp"
        android:gravity="center" 
        android:visibility="visible"
         />

    
    
    </RelativeLayout>
        
</RelativeLayout>