<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="noTitle" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="main_tab_bottom">

        <!-- <item name="android:textSize">@dimen/bottom_tab_font_size</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/tab_bg</item>
    </style>

    <style name="title_top">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">#f06939</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="h_item">

        <!--
        <item name="android:fontFamily"></item>
        <item name="android:shadowDx">1dp</item>
        <item name="android:shadowDy">1dp</item>
        <item name="android:shadowRadius">2dp</item>
        <item name="android:shadowColor">#d2d2d2</item>
        -->
        <item name="android:textSize">14sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="gw_list_view">
        <item name="android:divider">@color/grey_bg</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <string-array name="options">
        <item> 当天</item>
        <item> 1天</item>
        <item> 2天</item>
        <item> 3天</item>
        <item> 4天</item>
        <item> 5天</item>
        <item> 6天</item>
        <item> 7天</item>
        <item> 8天</item>
        <item> 9天</item>
        <item> 10天</item>
        <item> 11天</item>
    </string-array>

    <style name="base_dialog" parent="android:Theme.Dialog">

        <!--
        <item name="android:windowFrame">@null</item> 
		<item name="android:windowIsFloating">true</item> 
		<item name="android:windowIsTranslucent">false</item>
        -->
        <item name="android:windowNoTitle">true</item>
        <!--
        <item name="android:windowBackground">@null</item>
		<item name="android:backgroundDimEnabled">false</item>
        -->
    </style>

</resources>